EXERC√çCIOS SQL

1-

SELECT strftime('%d', T1.BirthDate) Day, T2.FirstName, T2.LastName
FROM [HumanResources.Employee] T1
INNER JOIN [Person.Person] T2 ON T1.BusinessEntityID = T2.BusinessEntityID
WHERE strftime('%m', T1.BirthDate) = '08'
ORDER BY Day;


2-

SELECT T1.CustomerID, T2.FirstName || ' '  ||  T2.MiddleName || ' '  || T2.LastName AS FullName
FROM [Sales.Customer] T1
INNER JOIN  [Person.Person] T2 ON T1.CustomerID = T2.BusinessEntityID


3-

CREATE TABLE Funcionario(
id_funcionario integer,
nome varchar(200),
data_aniv varchar(10),
salario decimal(10, 2),
ativo varchar(10)
);


CREATE TABLE Funcionario(
id_funcionario integer,
nome varchar(200),
data varchar(10),
salario decimal(10, 2),
ativo varchar(10)
);



CREATE TABLE Funcionario(
id_funcionario integer PRIMARY KEY,
nome varchar(200),
data varchar(10),
salario decimal(10, 2),
ativo varchar(10)
);



CREATE TABLE Funcionario(
id_funcionario integer PRIMARY KEY,
nome varchar(200) NOT NULL,
data varchar(10),
salario decimal(10, 2),
ativo varchar(10)
);



4-


CREATE TABLE Documentos(
id_documento integer PRIMARY KEY AUTOINCREMENT,
id_funcionario integer,
tipo_documento char(3) CHECK("RG" OR "CPF"),
nr_documento char(11),
data_ult_modific date,
FOREIGN KEY (id_funcionario) REFERENCES Funcionario(id_funcionario)
)
